{
  "name": "polished",
  "description": "A lightweight toolset for writing styles in Javascript.",
  "license": "MIT",
  "author": "Brian Hough <hello@brianhough.net> (https://polished.js.org)",
  "homepage": "https://polished.js.org",
  "bugs": "https://github.com/styled-components/polished/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/styled-components/polished.git"
  },
  "keywords": [
    "styled-components",
    "polished",
    "emotion",
    "glamor",
    "css-in-js",
    "inline-styles",
    "react",
    "flow",
    "typescript",
    "color manipulate",
    "color manipulation",
    "curried color manipulation",
    "color",
    "colour"
  ],
  "main": "dist/polished.cjs.js",
  "module": "dist/polished.esm.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:lib && yarn build:dist && yarn build:flow && yarn build:typescript",
    "prebuild:lib": "shx rm -rf lib/*",
    "build:lib": "cross-env BABEL_ENV=cjs babel --out-dir lib src --ignore test.js",
    "commit": "cz",
    "prebuild:umd": "shx rm -rf dist/*",
    "prebuild:dist": "shx rm -rf dist/*",
    "build:dist": "rollup -c",
    "build:watch": "npm-watch",
    "build:flow": "flow-copy-source -v -i '{**/test/*.js,**/*.test.js}' src lib",
    "build:typescript": "tsgen \"lib/**/*.js.flow\" --ignore \"lib/**/_*.js.flow\"",
    "test": "jest src",
    "typescript": "tsc ./typescript-test.ts --noEmit --target es6 --module es2015 --moduleResolution node --allowJs",
    "lint": "eslint src",
    "flow": "flow check && flow batch-coverage src/ --show-all --strip-root",
    "prepare": "yarn build && yarn typescript",
    "semantic-release": "semantic-release"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "watch": {
    "build:lib": "src/**/*.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-flow": "^7.9.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@types/node": "^14.11.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-preval": "5.0.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "flow-bin": "^0.133.0",
    "flow-copy-source": "^2.0.8",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "npm-watch": "^0.7.0",
    "prettier": "^2.0.5",
    "ramda": "^0.27.0",
    "rollup": "^2.27.1",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.1.2",
    "shx": "^0.3.2",
    "typescript": "4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testURL": "http://localhost/",
    "verbose": true
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/polished"
  },
  "husky": {
    "hooks": {
      "post-commit": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged --debug"
    }
  },
  "engines": {
    "node": ">=10"
  }
}
